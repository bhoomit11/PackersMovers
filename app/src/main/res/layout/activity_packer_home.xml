<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pack.packersmovers.packerHome">

    <TextView
        android:id="@+id/phomehead"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="Choose Your Option : "/>
        <Button
            android:id="@+id/edtbtn"
            android:layout_width="180dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textSize="20sp"
            android:background="@color/material_deep_teal_500"
            />
        <Button
            android:id="@+id/postbtn"
            android:layout_width="180dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Add New Post"
            android:textSize="20sp"
            android:background="@color/material_deep_teal_500"
            />
        <Button
            android:id="@+id/actvbtn"
            android:layout_width="180dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Active Posts"
            android:textSize="20sp"
            android:background="@color/material_deep_teal_500"
            />
        <Button
            android:id="@+id/srchbtn"
            android:layout_width="180dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Search Mover"
            android:textSize="20sp"
            android:background="@color/material_deep_teal_500"
            />
        <Button
            android:id="@+id/fdbckbtn"
            android:layout_width="180dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Done Deals"
            android:textSize="20sp"
            android:background="@color/material_deep_teal_500"
            />
    </LinearLayout>

</RelativeLayout>
