<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pack.packersmovers.moverHome">
    <TextView
        android:id="@+id/mhomehead"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your option: "
            android:textSize="22dp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/managevehicle"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonripple"
            android:text="Manage Vehicle"/>
        <Button
            android:id="@+id/startbid"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonripple"
            android:text="Start Biding"/>
        <Button
            android:id="@+id/mngprofile"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonripple"
            android:text="Manage Profile"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/buttonripple"
            android:text="Revoke Bids"/>
        <Button
            android:id="@+id/logout"
            android:layout_width="200dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Log out"
            android:textSize="20sp"
            android:background="@drawable/buttonripple" />
    </LinearLayout>
</RelativeLayout>
