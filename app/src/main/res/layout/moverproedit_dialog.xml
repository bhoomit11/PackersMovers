<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin">
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="20dp"
                android:text="Comapny name : "/>
            <EditText
                android:id="@+id/dia_cname"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                android:background="@android:color/transparent"
                android:hint="Company Name"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="20dp"
                android:text="ContactNo : "/>
            <EditText
                android:id="@+id/dia_cno"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                android:background="@android:color/transparent"
                android:hint="Contact Number"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="20dp"
                android:text="Address : "/>
            <EditText
                android:id="@+id/dia_address"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                android:background="@android:color/transparent"
                android:hint="Address"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="20dp"
                android:text="City : "/>
            <EditText
                android:id="@+id/dia_city"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                android:background="@android:color/transparent"
                android:hint="City"/>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textSize="20dp"
                android:text="Zipcode : "/>
            <EditText
                android:id="@+id/dia_zip"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:fontFamily="sans-serif-light"
                android:background="@android:color/transparent"
                android:hint="Zipcode"/>
        </TableRow>
        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/dia_done"
                android:layout_width="100dp"
                android:background="@drawable/buttonripple"
                android:layout_height="wrap_content"
                android:text="Done"/>
            <Button
                android:id="@+id/dia_cancel"
                android:layout_marginStart="15dp"
                android:layout_width="100dp"
                android:background="@drawable/buttonripple"
                android:layout_height="wrap_content"
                android:text="Cancel"/>
        </LinearLayout>
    </TableLayout>

</LinearLayout>